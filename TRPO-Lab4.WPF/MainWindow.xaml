        <Image Source="/Picture.png" Margin="299,15,0,94"></Image>
        <Label Content="Впишите данные" FontSize="30" Grid.Column="1" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Top" FontFamily="Palatino Linotype"/>
        <Label Content="Радиус шара" Grid.Column="1" HorizontalAlignment="Left" Margin="5,44,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Радиус основания" Grid.Column="1" HorizontalAlignment="Left" Margin="5,81,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Высота" Grid.Column="1" HorizontalAlignment="Left" Margin="5,118,0,0" VerticalAlignment="Top" FontSize="20"/>
