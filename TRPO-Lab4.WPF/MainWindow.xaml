        <TextBox x:Name="txt_radius" HorizontalAlignment="Left" Margin="179,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" />
        <TextBox x:Name="txt_height" HorizontalAlignment="Left" Margin="179,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28"/>
    </Grid>
</Window>
